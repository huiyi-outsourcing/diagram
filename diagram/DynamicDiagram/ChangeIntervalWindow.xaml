<Window x:Class="diagram.DynamicDiagram.ChangeIntervalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="更改时间间隔" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label Content="刷新间隔(秒)" Grid.Row="0" FontSize="15" VerticalAlignment="Center" Margin="20 0 20 0"/>
        <TextBox Name="tbInterval" Grid.Row="0" FontSize="15" Height="30" Width="150" HorizontalAlignment="Right" Margin="0 0 20 0" />
        <Label Content="显示时间(分)" Grid.Row="1" FontSize="15" VerticalAlignment="Center" Margin="20 0 20 0" />
        <TextBox Name="tbDisplayInterval" Grid.Row="1" FontSize="15" Height="30" Width="150" HorizontalAlignment="Right" Margin="0 0 20 0" />
        <Button Name="btnReset" Grid.Row="2" Content="重置" Width="80" Height="30" HorizontalAlignment="Right" Margin="0 0 110 0" Click="btnResetClicked" />
        <Button Name="btnConfirm" Grid.Row="2" Content="确定" Width="80" Height="30" HorizontalAlignment="Right" Margin="0 0 20 0" Click="btnConfirmlicked" />
    </Grid>
</Window>
